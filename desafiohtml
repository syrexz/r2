    <script>
        //... animação
        document.querySelectorAll('a').forEach(link => {
            const links = document.getElementById('links')

            link.onclick = function(e) {
                e.preventDefault()

                fetch(link.href)
                .then(resp => resp.text())
                .then(html => links.innerHTML = html)
            }
        })
        
    </script>
    
